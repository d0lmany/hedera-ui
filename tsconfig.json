{
    "compilerOptions": {
        /* module settings */
        "module": "es2022",
        "moduleResolution": "bundler",
        "lib": ["DOM", "ES2022", "DOM.Iterable"],
        
        /* typing & build */
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        /* dirs */
        "rootDir": ".",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "App.vue", "main.ts", "index.html",
    ]
}
